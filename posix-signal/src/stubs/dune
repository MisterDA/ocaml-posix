(env
 (dev
  (flags
   (:standard -warn-error -A))))

(library
 (name posix_signal_stubs)
 (public_name posix-signal.stubs)
 (libraries posix-signal.types ctypes.stubs))

(rule
 (targets posix_signal_generated_types.ml)
 (deps
  (:exec ../generator/exec.sh)
  (:gen ../generator/gen_types_c))
 (action
  (with-stdout-to
   %{targets}
   (system "%{exec} %{ocaml-config:system} %{gen}"))))
